div.container
    div.row
        div.col-lg-5
            form(id='login', method='post', action='#{node.auth.login}')
                fieldset
                legend Login
                div.form-group
                    label(for='username') Username
                    input(name='username',ng-model='user.username', class='form-control')
                div.form-group
                    label(for='password') Password
                    input(name='password',ng-model='user.password', type='password',class='form-control')
                button(class='btn btn-primary', ng-click="login") Login